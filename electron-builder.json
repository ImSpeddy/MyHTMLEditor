{
	"appId": "com.speddy.htmleditor",
	"productName": "HTMLEditor",
	"directories": {
		"output": "dist"
	},
	"files": ["!filePresets/**"],
	"extraResources": [{ "from": "filePresets", "to": "../filePresets" }],
	"win": {
		"target": "zip",
		"artifactName": "HTMLEditor-${version}-win.zip"
	},
	"mac": {
		"target": "zip",
		"artifactName": "HTMLEditor-${version}-mac-${arch}.zip"
	},
	"linux": {
		"target": "AppImage",
		"artifactName": "HTMLEditor-${version}-linux.AppImage"
	}
}
